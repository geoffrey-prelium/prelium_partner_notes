<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prelium_partner_notes_category_list" model="ir.ui.view">
        <field name="name">prelium.partner.notes.category.list</field>
        <field name="model">prelium_partner_notes.category</field>
        <field name="arch" type="xml">
            <list string="Categories" editable="bottom">
                <field name="name" string="Nom de la categorie"/>
            </list>
        </field>
    </record>

    <record id="view_prelium_partner_notes_category_form" model="ir.ui.view">
        <field name="name">prelium.partner.notes.category.form</field>
        <field name="model">prelium_partner_notes.category</field>
        <field name="arch" type="xml">
            <form string="Categorie">
                <sheet>
                    <group>
                        <field name="name" string="Nom de la categorie"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_prelium_partner_notes_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">prelium_partner_notes.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
