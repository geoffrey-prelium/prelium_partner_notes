<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_partner_notes" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.partner.notes</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_partner_notes" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-sticky-note-o">
                    <field name="partner_note_count" widget="statinfo" string="Notes"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
